<controls:ChildWindow x:Class="DKSIMVB.CombatLogViewer"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="750" Height="450"
           Title="CombatLogViewer">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,12,12,0" Grid.Row="1" />
        <ScrollViewer Height="370" Name="ScrollViewer1" Width="700">
            <StackPanel  Name="LogStack"/>
        </ScrollViewer>
    </Grid>
</controls:ChildWindow>
