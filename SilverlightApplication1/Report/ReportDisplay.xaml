<controls:ChildWindow x:Class="DKSIMVB.ReportDisplay"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="800" Height="708"
           Title="ReportDisplay" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="526*" />
            <RowDefinition Height="115" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,5,12,0" Grid.Row="2" />
        <sdk:DataGrid AutoGenerateColumns="True"  HorizontalAlignment="Left" Name="dgReport" Width="780" FontSize="9" />
        <TextBox Grid.Row="1" Margin="0,6,0,0" Name="txtAdditionalInfo" Text="TextBlock" IsReadOnly="True" />
    </Grid>
</controls:ChildWindow>
