<UserControl x:Class="DKSIMVB.ReportFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800" d:DesignWidth="800" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    <sdk:TabControl HorizontalAlignment="Left" Name="TabControl1" VerticalAlignment="Top">
        <sdk:TabItem Header="Visual" Name="TabItem1">
            <Grid x:Name="LayoutRoot" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="500" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                    <sdk:DataGrid AutoGenerateColumns="True" FontSize="9"   Name="dgReport" MinColumnWidth="5" />
                    <TextBox Grid.Row="1" Name="txtAdditionalInfo" Text="TextBlock" IsReadOnly="True" />
                <Grid />
            </Grid>
        </sdk:TabItem>
        <sdk:TabItem Header="BB-CODE" Name="TabItem2">
            <TextBox Grid.Row="1" Name="txtBBCode" Text="" IsReadOnly="True" />
        </sdk:TabItem>
    </sdk:TabControl>
</UserControl>
