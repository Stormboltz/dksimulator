<UserControl x:Class="DKSIMVB.VisualEquipSlot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60" d:DesignWidth="60">

    <Grid x:Name="LayoutRoot" Background="White">
        <Border BorderBrush="Silver" BorderThickness="1" HorizontalAlignment="Left" Name="Border1" VerticalAlignment="Top" Height="60" Width="60">
            <Button Name="cmdEquipSlot">
                <Image  HorizontalAlignment="Left" Name="ImSlot" Stretch="UniformToFill" VerticalAlignment="Top" Height="56" Width="56" />
            </Button>
        </Border>
    </Grid>
</UserControl>
