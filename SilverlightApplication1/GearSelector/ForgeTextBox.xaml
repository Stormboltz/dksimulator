<UserControl x:Class="DKSIMVB.ForgeTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:Height="24" d:Width="62">

    <Grid x:Name="LayoutRoot" Background="White">
        <Button Content="+" Height="12" HorizontalAlignment="Right"  Name="btPlus" VerticalAlignment="Top" Width="12" FontSize="8" Padding="0" />
        <Button Content="-" HorizontalAlignment="Right" Name="btMinus" Width="12" FontSize="8" Padding="0" Height="12" VerticalAlignment="Bottom" />
        <TextBox Height="24" HorizontalAlignment="Left" Name="txtValue" VerticalAlignment="Top" Width="50" Text="0" FlowDirection="RightToLeft" />
    </Grid>
</UserControl>
