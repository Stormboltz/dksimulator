                <TextBox Height="23" HorizontalAlignment="Right" Margin="0,170,198,0" Name="txtArmor" VerticalAlignment="Top" Width="120" Canvas.Left="94" Canvas.Top="-74" />
                <sdk:Label Height="28" HorizontalAlignment="Left" Margin="91,199,0,0" Name="Label6" VerticalAlignment="Top" Width="88" Canvas.Left="-91" Canvas.Top="-70" Content="Attack Power(Green number)" />
