<controls:ChildWindow   x:Class="DKSIMVB.GemSelector"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
          
           Width="800" Height="400"
           Title="GemSelector" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" FontSize="10">
    
        <Grid x:Name="LayoutRoot" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
            <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,12,79,0" Grid.Row="1" />
        <Button x:Name="NoneButton" Content="None" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,12,160,0" Grid.Row="1" />
        <sdk:DataGrid AutoGenerateColumns="true" Name="gGems">
                <sdk:DataGrid.Columns>

                </sdk:DataGrid.Columns>
            </sdk:DataGrid>
            <TextBox Height="23" HorizontalAlignment="Right" Margin="0,12,284,0" Name="txtFilter" Width="468" Grid.Row="1" />
        </Grid>
    
</controls:ChildWindow>
