<controls:ChildWindow xmlns:toolkit="clr-namespace:System.Windows.Controls.Theming;assembly=System.Windows.Controls.Theming.TwilightBlue"  x:Class="DKSIMVB.TextEditor"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="500" Height="500"
           Title="TextEditor">
    <toolkit:TwilightBlueTheme >
        <Grid x:Name="LayoutRoot" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <TextBox HorizontalAlignment="Left" Name="TextBox1" VerticalAlignment="Top" IsReadOnly="True" MinWidth="450" MinHeight="400" />
            </ScrollViewer>
            <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,10,80,10" Grid.Row="1" />
        </Grid>
    </toolkit:TwilightBlueTheme>
</controls:ChildWindow>
