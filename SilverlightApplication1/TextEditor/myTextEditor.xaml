<controls:ChildWindow x:Class="DKSIMVB.mytextEditor"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="800" Height="500"
           Title="Text Editor">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <TextBox HorizontalAlignment="Left" Name="txtEdit" VerticalAlignment="Top" IsReadOnly="False" MinWidth="750" MinHeight="400" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" />
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Name="cmdOk" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="10,10,10,10"  />
            <Button Name="cmdCancel" Content="Cancel" Width="75" Height="23" HorizontalAlignment="Right"  Margin="10,10,10,10"  />
        </StackPanel>
        
    </Grid>
</controls:ChildWindow>
