<controls:ChildWindow 
    x:Class="DKSIMVB.myTextReader"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           
           Width="800" Height="500"
           Title="Text Reader">
   
        <Grid x:Name="LayoutRoot" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <TextBox HorizontalAlignment="Left" Name="TextBox1" VerticalAlignment="Top" IsReadOnly="True" MinWidth="750" MinHeight="400" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
            </ScrollViewer>
            <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,10,80,10" Grid.Row="1" />
        </Grid>
   
</controls:ChildWindow>
